{% extends 'base.html.j2' %}
{% block title %}
    Edit Item
{% endblock %}

{% block content %}
<body class="text-center">
    <div class="container col-md-4">
        <form method="POST" class="form-register" style="color:black">
            {{ form.hidden_tag() }}
            <img class="mb-4" src="https://res.cloudinary.com/dzzbwxwsv/image/upload/c_scale,h_200,w_350/v1636793686/antiques-logo_fyz0f9.jpg" style="margin-top:30px" width="200" height="120">
            <h1 class="h3 mb-3">
                Edit Item
            </h1>
            <br>
            {{ form.name.label() }}
            {{ form.name(class="form-control", placeholder="Name") }}

            {{ form.price.label() }}
            {{ form.price(class="form-control", placeholder="Price") }}

            {{ form.img.label() }}
            {{ form.img(class="form-control", placeholder="Image Link") }}

            {{ form.description.label() }}
            {{ form.description(class="form-control", placeholder="Description") }}

            <br>

            {{ form.submit(class="btn btn-lg btn-block btn-primary", value="Submit") }}
            <br>
        </form>
    </div>
</body>
{% endblock %}